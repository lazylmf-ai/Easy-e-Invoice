# Production Environment Variables for Easy e-Invoice Frontend

# App Configuration
NEXT_PUBLIC_APP_NAME="Easy e-Invoice"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_ENV="production"
NEXT_PUBLIC_APP_URL="https://easyeinvoice.com.my"

# API Configuration
NEXT_PUBLIC_API_URL="https://easy-e-invoice-api-prod.workers.dev"
NEXT_PUBLIC_API_VERSION="v1"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_PWA="true"
NEXT_PUBLIC_ENABLE_OFFLINE_MODE="false"
NEXT_PUBLIC_ENABLE_BETA_FEATURES="false"
NEXT_PUBLIC_ENABLE_DEBUG_MODE="false"

# External Services
NEXT_PUBLIC_SENTRY_DSN=""  # Set via Vercel environment variables
NEXT_PUBLIC_SENTRY_ENVIRONMENT="production"
NEXT_PUBLIC_POSTHOG_KEY=""  # Set via Vercel environment variables
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""  # Set via Vercel environment variables

# Malaysian Localization
NEXT_PUBLIC_DEFAULT_LOCALE="en"
NEXT_PUBLIC_SUPPORTED_LOCALES="en,ms"
NEXT_PUBLIC_DEFAULT_CURRENCY="MYR"
NEXT_PUBLIC_DEFAULT_TIMEZONE="Asia/Kuala_Lumpur"

# Performance Configuration  
NEXT_PUBLIC_ENABLE_BUNDLE_ANALYZER="false"
NEXT_PUBLIC_ENABLE_SERVICE_WORKER="true"
NEXT_PUBLIC_CACHE_VERSION="1.0.0"

# Security Configuration
NEXT_PUBLIC_CSP_REPORT_URI="https://api.easyeinvoice.com.my/api/csp-report"
NEXT_PUBLIC_ENABLE_CSRF_PROTECTION="true"

# SEO Configuration
NEXT_PUBLIC_SITE_NAME="Easy e-Invoice - Malaysian E-Invoice Compliance"
NEXT_PUBLIC_SITE_DESCRIPTION="Simplify Malaysian e-Invoice compliance for micro-SMEs with automated validation and LHDN-compliant invoice generation"
NEXT_PUBLIC_SITE_KEYWORDS="Malaysian e-Invoice, LHDN compliance, SME invoicing, MyInvois, tax compliance"
NEXT_PUBLIC_SITE_URL="https://easyeinvoice.com.my"

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE="@easyeinvoice"
NEXT_PUBLIC_FACEBOOK_PAGE="easyeinvoice"
NEXT_PUBLIC_LINKEDIN_COMPANY="easy-einvoice"

# Contact Information
NEXT_PUBLIC_SUPPORT_EMAIL="support@easyeinvoice.com.my"
NEXT_PUBLIC_SUPPORT_PHONE="+60312345678"
NEXT_PUBLIC_BUSINESS_ADDRESS="Kuala Lumpur, Malaysia"

# Legal
NEXT_PUBLIC_PRIVACY_POLICY_URL="/privacy"
NEXT_PUBLIC_TERMS_OF_SERVICE_URL="/terms"
NEXT_PUBLIC_COOKIE_POLICY_URL="/cookies"

# Build Configuration
ANALYZE="false"
NEXT_TELEMETRY_DISABLED="1"