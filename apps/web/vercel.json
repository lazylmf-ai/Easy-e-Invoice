{
  "version": 2,
  "name": "easy-einvoice-web",
  "scope": "easy-einvoice",
  "alias": ["easyeinvoice.com.my", "www.easyeinvoice.com.my"],
  "regions": ["sin1"],
  "framework": "nextjs",
  "buildCommand": "cd ../.. && npm run build:web",
  "outputDirectory": ".next",
  "installCommand": "cd ../.. && npm install",
  "devCommand": "cd ../.. && npm run dev:web",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD apps/web/",
  
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Easy e-Invoice",
    "NEXT_PUBLIC_APP_VERSION": "1.0.0",
    "NEXT_PUBLIC_APP_ENV": "production",
    "NEXT_PUBLIC_ENABLE_ANALYTICS": "true"
  },

  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "https://api.easyeinvoice.com.my",
      "NEXT_PUBLIC_APP_URL": "https://easyeinvoice.com.my",
      "NEXT_PUBLIC_SENTRY_DSN": "@sentry-dsn-web",
      "NEXT_PUBLIC_POSTHOG_KEY": "@posthog-key",
      "NEXT_PUBLIC_POSTHOG_HOST": "https://app.posthog.com",
      "ANALYZE": "false",
      "NODE_ENV": "production"
    }
  },

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), interest-cohort=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline' https://js.stripe.com https://api.easyeinvoice.com.my https://app.posthog.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.easyeinvoice.com.my https://app.posthog.com wss://app.posthog.com; frame-src 'self' https://js.stripe.com; object-src 'none'; base-uri 'self'"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/app",
      "destination": "/dashboard", 
      "permanent": true
    }
  ],

  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/robots.txt", 
      "destination": "/api/robots"
    },
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ],

  "functions": {
    "apps/web/src/app/api/*/route.ts": {
      "maxDuration": 30
    }
  },

  "crons": [
    {
      "path": "/api/cron/cleanup-temp-files",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/generate-sitemap", 
      "schedule": "0 4 * * 0"
    }
  ],

  "github": {
    "enabled": true,
    "autoAlias": false,
    "silent": true
  }
}